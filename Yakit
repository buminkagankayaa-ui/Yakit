  <script>
    // GÃ¼venli para formatÄ± (TR)
    const formatTL = (tutar) =>
      new Intl.NumberFormat("tr-TR", { style: "currency", currency: "TRY" }).format(tutar);

    // YakÄ±t seÃ§imi (event kullanmadan)
    function setFuel(el, type, price) {
      document.querySelectorAll(".fuel-type").forEach((x) => x.classList.remove("active"));
      el.classList.add("active");

      const input = document.getElementById("fiyat");
      input.value = Number(price).toFixed(2);

      // kÃ¼Ã§Ã¼k bir vurgu
      input.style.backgroundColor = "#e0f2fe";
      setTimeout(() => (input.style.backgroundColor = "#fff"), 250);
    }

    function hesapla() {
      let mesafe = parseFloat(document.getElementById("mesafe").value);
      const tuketim = parseFloat(document.getElementById("tuketim").value);
      const fiyat = parseFloat(document.getElementById("fiyat").value);
      const kisi = parseInt(document.getElementById("kisi").value, 10) || 1;
      const gidisDonus = document.getElementById("gidisDonus").checked;

      if (!mesafe || !tuketim || !fiyat) {
        alert("LÃ¼tfen mesafe, tÃ¼ketim ve fiyat bilgilerini giriniz.");
        return;
      }

      if (mesafe < 0 || tuketim < 0 || fiyat < 0 || kisi < 1) {
        alert("LÃ¼tfen geÃ§erli (pozitif) deÄŸerler giriniz.");
        return;
      }

      // GidiÅŸ dÃ¶nÃ¼ÅŸ ise mesafeyi ikiye katla
      if (gidisDonus) mesafe = mesafe * 2;

      const toplamLitre = (mesafe / 100) * tuketim;
      const toplamTutar = toplamLitre * fiyat;
      const kisiBasi = toplamTutar / kisi;

      document.getElementById("resMesafe").innerText = mesafe.toFixed(0) + " km";
      document.getElementById("resLitre").innerText = toplamLitre.toFixed(1) + " Lt";
      document.getElementById("resTutar").innerText = formatTL(toplamTutar);

      const kisiBasiEl = document.getElementById("resKisiBasi");
      if (kisi > 1) {
        kisiBasiEl.style.display = "block";
        kisiBasiEl.innerText = "KiÅŸi baÅŸÄ±: " + formatTL(kisiBasi);
      } else {
        kisiBasiEl.style.display = "none";
      }

      document.getElementById("sonucAlani").style.display = "block";
    }
  </script>
